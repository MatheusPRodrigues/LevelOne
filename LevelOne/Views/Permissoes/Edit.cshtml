@model LevelOne.Models.PermissaoModel

@{
    ViewData["Title"] = "Editar Permissão";
}

<div class="permissao-edit-container mt-5">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 500px; border-radius: 14px;">
        <h2 class="text-primary fw-bold text-center mb-4">
            <i class="bi bi-pencil-square me-2"></i>Editar Permissão
        </h2>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-4">
                <label asp-for="Nome" class="form-label fw-semibold text-secondary">Nome da Permissão</label>
                <input asp-for="Nome" class="form-control form-control-lg shadow-sm" placeholder="Digite o nome da permissão" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary px-4 rounded-pill">
                    <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                </a>
                <button type="submit" class="btn btn-primary px-4 rounded-pill">
                    <i class="bi bi-save2 me-1"></i> Salvar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}