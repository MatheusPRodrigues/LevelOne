@model IEnumerable<LevelOne.Models.PermissaoModel>

@{
    ViewData["Title"] = "Permissões";
}

<div class="permissoes-container mt-5">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 800px; border-radius: 14px;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary fw-bold mb-0">
                <i class="bi bi-shield-lock-fill me-2"></i>Gerenciar Permissões
            </h2>
            <a asp-action="Create" class="btn btn-primary px-3">
                <i class="bi bi-plus-circle me-1"></i> Nova Permissão
            </a>
        </div>

        <table class="table table-hover text-center align-middle shadow-sm" style="border-radius: 12px; overflow: hidden;">
            <thead class="text-white" style="background-color: #2b4db8;">
            <tr>
                <th scope="col" class="py-3">Nome da Permissão</th>
                <th scope="col" class="py-3" style="width: 200px;">Ações</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-semibold text-secondary">@item.Nome</td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-white">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash3-fill"></i> Excluir
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>