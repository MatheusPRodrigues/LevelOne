<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - LevelOne</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/LevelOne.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LevelOne</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Gerenciar
                            Usuários</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Permissoes" asp-action="Index">Gerenciar
                            Permissões</a>
                    </li>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center me-3">
                                <i class="bi bi-person-circle fs-5 me-2"></i>
                                <span>@User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Login" asp-action="Logout" method="get">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Sair</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="Index">Entrar</a>
                            </li>
                        }
                    </ul>

                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - LevelOne - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@if (User.Identity.IsAuthenticated)
{
    <script>
        (function () {
            const sessionTimeout = 1 * 60 * 1000; // 1 minuto total (teste)
            const warningBefore = 10 * 1000;      // alerta 10s antes
            let warningTimeout;
            let logoutTimeout;
            let lastActivityTime = Date.now();

            function resetTimers() {
                const now = Date.now();
                lastActivityTime = now;

                clearTimeout(warningTimeout);
                clearTimeout(logoutTimeout);

                // Agenda o alerta de aviso
                warningTimeout = setTimeout(() => {
                    const remaining = Math.floor((sessionTimeout - (Date.now() - lastActivityTime)) / 1000);
                    if (remaining > 0) {
                        alert(`Sua sessão vai expirar em ${remaining} segundos se não houver atividade!`);
                    }
                }, sessionTimeout - warningBefore);

                // Agenda o logout
                logoutTimeout = setTimeout(async () => {
                    alert("Sua sessão expirou por inatividade. Redirecionando para o login.");
                    await fetch('/Login/Logout/');
                    window.location.href = '/Login';
                }, sessionTimeout);
            }

            // Detecta atividade do usuário
            const events = ['mousemove', 'keydown', 'click', 'scroll', 'touchstart'];
            events.forEach(evt => document.addEventListener(evt, resetTimers));

            // Inicializa os timers
            resetTimers();
        })();
    </script>
}


@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
