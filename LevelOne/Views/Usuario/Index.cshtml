@model IEnumerable<LevelOne.Models.UsuarioModel>

@{
    ViewData["Title"] = "Gerenciamento de Usuários";
}

<div class="usuarios-container mt-4">
    <h2 class="text-center text-primary fw-bold mb-4">Gerenciamento de Usuários</h2>

    @if (TempData["Sucesso"] != null)
    {
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Sucesso"]
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="mb-0 text-muted">Lista de todos os usuários cadastrados no sistema.</p>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2">
            <i class="bi bi-person-plus-fill me-1"></i> Novo Usuário
        </a>
    </div>

    <div class="table-responsive usuario-tabela-wrapper">
        <table class="table usuario-tabela text-center align-middle">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Cpf)</th>
                    <th>@Html.DisplayNameFor(model => model.Ativo)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cpf)</td>
                        <td>
                            @if (item.Ativo)
                            {
                                <span class="badge bg-success px-3 py-2">Ativo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary px-3 py-2">Inativo</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex justify-content-center flex-wrap gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a asp-action="AlterarSenha" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-key-fill"></i> Senha
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash-fill"></i> Excluir
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var toastEl = document.getElementById('successToast');
        if (toastEl) {
            var toast = new bootstrap.Toast(toastEl, { delay: 3000 });
            toast.show();
        }
    });
</script>
