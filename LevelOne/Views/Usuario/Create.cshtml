@model LevelOne.Models.UsuarioModel

@{
    ViewData["Title"] = "Cadastrar Usuário";
    var permissoes = ViewBag.Permissoes as List<LevelOne.Models.PermissaoModel>;
}

<div class="create-usuario-container mt-5">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 600px; border-radius: 14px;">
        <h2 class="text-center text-primary fw-bold mb-4">
            <i class="bi bi-person-plus-fill me-2"></i>@ViewData["Title"]
        </h2>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label fw-semibold text-secondary"></label>
                <input asp-for="Nome" class="form-control shadow-sm" placeholder="Digite o nome completo" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label fw-semibold text-secondary"></label>
                <input asp-for="Email" class="form-control shadow-sm" placeholder="exemplo@dominio.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cpf" class="form-label fw-semibold text-secondary"></label>
                <input asp-for="Cpf" class="form-control shadow-sm" ninput="this.value = this.value.replace(/[^0-9]/g, '')" placeholder="Digite o CPF" />
                <span asp-validation-for="Cpf" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Senha" class="form-label fw-semibold text-secondary"></label>
                <input asp-for="Senha" type="password" class="form-control shadow-sm" placeholder="Digite uma senha segura" />
                <span asp-validation-for="Senha" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label class="form-label fw-semibold text-secondary">Permissões:</label>

                <div class="p-3 rounded border bg-light">
                    @foreach (var permissao in permissoes)
                    {
                        <div class="form-check mb-2">
                            <input class="form-check-input permissao-checkbox" 
                                   type="checkbox"
                                   name="PermissaoSelecionada"
                                   value="@permissao.Id" 
                                   id="perm_@permissao.Id" />

                            <label class="form-check-label" for="perm_@permissao.Id">
                                @permissao.Nome
                            </label>
                        </div>
                    }
                </div>
            </div>


            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                </a>

                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-save2-fill me-1"></i> Salvar
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    document.querySelectorAll('.permissao-checkbox').forEach(cb => {
        cb.addEventListener('change', function () {
            if (this.checked) {
                document.querySelectorAll('.permissao-checkbox').forEach(other => {
                    if (other !== this) {
                        other.checked = false;
                    }
                });
            }
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
